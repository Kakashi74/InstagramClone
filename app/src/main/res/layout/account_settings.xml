<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paernt_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLay">
        <include
            layout="@layout/top_tollbar_settings"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relayoutsetts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/firstLay"
            android:layout_marginBottom="50dp">
            <include
                layout="@layout/layout_settings"/>
        </RelativeLayout>

    </RelativeLayout>
    <include layout="@layout/bottom_view_bar"/>
</android.support.design.widget.CoordinatorLayout>